{
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build active file",
			"command": "g++",
			"args": [
				"-std=c++20",
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-D_GLIBCXX_DEBUG",
				"-D_GLIBXX_DEBUG_PEDANTIC",
				"-D_FORTIFY_SOURCE=2",
				"-DLOCAL_COMP_LINUX",
				"-Wall",
				"-Wextra",
				// "-Werror",
				"-Wall",
				"-Wextra",
				"-pedantic",
				"-Wshadow",
				"-Wformat=2",
				"-Wfloat-equal",
				"-Wconversion",
				"-Wlogical-op",
				"-Wshift-overflow=2",
				"-Wduplicated-cond",
				"-Wcast-qual",
				"-Wcast-align",
				// "-fsanitize=address",
				"-fsanitize=undefined",
				"-fno-sanitize-recover",
				"-fstack-protector",
				"-O2",
				// "-mavx",
				"-o",
				"${fileDirname}/out/main",
				"-fopenmp",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
		}
	],
	"version": "2.0.0"
}